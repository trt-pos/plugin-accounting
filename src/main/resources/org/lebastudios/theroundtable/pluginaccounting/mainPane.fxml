<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.lebastudios.theroundtable.components.IconButton?>
<VBox alignment="CENTER" spacing="5" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.lebastudios.theroundtable.pluginaccounting.MainPaneController">
    <padding>
        <Insets bottom="5" left="5" right="5" top="5"/>
    </padding>
    <HBox alignment="CENTER" spacing="15">
        <Label text="From:"/>
        <DatePicker fx:id="fromDatePicker"/>
        <Label text="To:"/>
        <DatePicker fx:id="toDatePicker"/>
        <Region HBox.hgrow="ALWAYS"/>
        <IconButton iconName="menu.png"/>
    </HBox>
    <TitledPane expanded="false" text="Filters">
        <content>
            <VBox spacing="5">
                <HBox spacing="5">
                    <ChoiceBox fx:id="employeeChoiceBox"/>
                </HBox>
                <HBox spacing="5">
                    <RadioButton fx:id="cashRadioButton" text="Cash" selected="true"/>
                    <RadioButton fx:id="creditRadioButton" text="Credit" selected="true"/>
                </HBox>
            </VBox>
        </content>
    </TitledPane>
    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="Date"/>
            <TableColumn text="Employee"/>
            <TableColumn text="Concept"/>
            <TableColumn text="Method"/>
            <TableColumn text="Qty"/>
            <TableColumn text="Total"/>
        </columns>
    </TableView>
    <HBox alignment="CENTER_RIGHT">
        <Label text="Total: 45 â‚¬"/>
    </HBox>
</VBox>
